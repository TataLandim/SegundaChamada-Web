@model Imobiliaria_HomeOffice.Models.ImovelViewModel

@{
    ViewData["Title"] = "Alterar Imóvel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Alterar Imóvel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdDeQuartos" class="control-label"></label>
                <input asp-for="QtdDeQuartos" class="form-control" />
                <span asp-validation-for="QtdDeQuartos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDoAluguel" class="control-label"></label>
                <input asp-for="ValorDoAluguel" class="form-control" />
                <span asp-validation-for="ValorDoAluguel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Voltar</a>
</div>

